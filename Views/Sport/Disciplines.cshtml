@using System.Text.RegularExpressions;
@model IEnumerable<Discipline>

@{
    ViewData["Title"] = "Disciplines";
    int sportId = (int)ViewData["idSport"]!;
}

<h2>@ViewData["nomSport"]: les disciplines</h2>

<div>
    <a asp-action="CreateDiscipline" asp-route-id="@sportId" class="add btn btn-info">Ajouter une discipline</a>
</div>

<table class="table">

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Record" asp-route-id="@item.Id" asp-controller="Sport" class="sports">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Retour</a>
</div>
