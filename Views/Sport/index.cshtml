@model IEnumerable<Sport>

@{
    ViewData["Title"] = "Sports";
}

<h2>Listes des sports</h2>

<div>
    <a asp-action="Create">Ajouter un sport</a>
</div>

<table class="table">

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Disciplines" asp-route-id="@item.Id">Les disciplines</a>
                </td>
            </tr>
        }
    </tbody>
</table>
