@model IEnumerable<Record>


@{
    ViewData["Title"] = "Record";
    var idDiscipline = ViewData["idDiscipline"];
}

<h2>@ViewData["nomDiscipline"]</h2>
<p> @ViewData["descrDiscipline"]</p>

<h2> Les records :</h2>

<table class="table">
    @foreach (var item in Model)
    {
        if (item.Athlete.Gender == 'F')
        {
            <thead>
                <tr>
                    <th>
                        Record féminin
                    </th>
                </tr>
            </thead>
            <tr>
                <td>
                    Le record féminin est de @item.Performance. Il est détenu par <a asp-controller="Athlete"
                asp-action="Index"> @item.Athlete.FirstName
                        @item.Athlete.LastName </a> et a été établi le @item.Date.ToString().Split(new char[] {' '})[0] à
                    @item.Location.
                </td>
            </tr>
        }

        if (item.Athlete.Gender == 'H')
        {
            <thead>
                <tr>
                    <th>
                        Record masculin
                    </th>
                </tr>
            </thead>
            <tr>
                <td>
                    Le record masculin est de @item.Performance. Il est détenu par <a asp-controller="Athlete"
                asp-action="Index"> @item.Athlete.FirstName
                        @item.Athlete.LastName </a> et a été établi le @item.Date.ToString().Split(new char[] {' '})[0] à
                    @item.Location.
                </td>
            </tr>
        }
    }

    @if (Model.Count() == 0)
    {
        <p> Il n'y a pas encore de record enregistré sur le site pour cette discipline.</p>
    }


    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                </td>
            </tr>
        }
    </tbody>
</table>


@if (Model == null)
{
    <p> Il n'y a pas de record enregistré</p>
}
