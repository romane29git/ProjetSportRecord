@model Discipline

@{
    ViewData["Title"] = "Ajouter une discipline";
    Discipline discipline = (Discipline)ViewData["Discipline"]!;
}

@* ça marche pas ça renvoi sur une page introuvable... encore *@

<h2>Ajouter une discipline</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDiscipline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Indiquez la discipline ci-dessous</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>

            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-light" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<div>
    <a asp-action="Index">Retour</a>
</div>