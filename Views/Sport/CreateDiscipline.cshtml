@model Discipline

@{
    ViewData["Title"] = "Ajouter une discipline";
    int sportId = (int)ViewData["idSport"]!;
}

@{
    int newIdDiscipline = (int)ViewData["idMaxDiscipline"] + 1;
}

<h2>Ajouter une discipline</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDiscipline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Indiquez le nom de la discipline</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Entrez une courte description de la
                    discipline</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="SportId" value="@sportId" />
            <input type="hidden" asp-for="Id" value="@newIdDiscipline" />
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<div>
    <a asp-action="Disciplines" asp-route-id="2">Retour</a>
</div>